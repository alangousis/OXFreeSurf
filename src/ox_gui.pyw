class Splash(tk.Toplevel):
    """
        Class Splash generates the initial splash screen of the software, which contains its name, 
        main logo and current version. 
    """

    def __init__(self, parent):
        tk.Toplevel.__init__(self, parent)
        bg = tk.PhotoImage(file="background.png")
        self.label_bg = tk.Label(self, image=bg)
        self.label_bg.place(x=0, y=0)
        self.title("Open channel Freesurf")
        self.geometry("505x505")

        for i in range(16):
            tk.Label(self, bg="#1F2732", width=2, height=1).place(x=(i + 4.5) * 20, y=400)

        self.update()
        self.animator()

    def animator(self):
        for i in range(1):
            for j in range(16):
                tk.Label(self, bg="#FFFFFF", width=2, height=1).place(x=(j + 4.5) * 20, y=400)
                sleep(0.05)
                self.update_idletasks()
                tk.Label(self, bg="#FFFFFF", width=2, height=1).place(x=(j + 4.5) * 20, y=400)

        self.update()


class Free_surf_GUI(tk.Tk):
    """
    Free_surf_gui is the main parent class where the user sets the inputs (i.e. Q, b, z, n, ds, dt and dx) as a shared
    dictionary between the children classes (i.e. Geometry_selector, Rectangular, Trapezoidal, Flow_characteristics,
    River_drawing, and Reboot_error), attributing them the initial frames’ characteristics (the basic features of the
    GUI’s windows).
    """

    def __init__(self, *args, **kwargs):
        tk.Tk.__init__(self, *args, **kwargs)

        self.withdraw()
        splash = Splash(self)
        splash.destroy()
        self.deiconify()

        self.shared_data = {  # Shared dictionary between children classes
            "Q": tk.StringVar(),
            "b": tk.StringVar(),
            "z": tk.StringVar(),
            "n0": tk.StringVar(),
            "ystart": tk.StringVar(),
            "yend": tk.StringVar(),
            "dx": tk.StringVar(),
        }

        container = tk.Frame(self, *args)  # Frame characteristics to children classes
        container.pack(side=tk.TOP, fill=tk.BOTH, expand=True)
        container.grid_rowconfigure(0, weight=1)
        container.grid_columnconfigure(0, weight=1)

        self.frames = {}
        self.tk.call('wm', 'iconphoto', self._w, tk.PhotoImage(file='logo_OX_pin.png'))
        self.winfo_toplevel().title("OX FreeSurf")

        for F in (River_Drawing, Geometry_Selector, Rectangular, Trapezoidal,
                  Flow_characteristics, Reboot_error):
            frame = F(container, self)

            self.frames[F] = frame
            frame.grid(row=0, column=0, sticky="nsew")

        self.show_frame(Geometry_Selector)

    def show_frame(self, cont):
        frame = self.frames[cont]
        frame.tkraise()


