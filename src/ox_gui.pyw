class Reboot_error(tk.Frame):
    """
    Reboot_error class generates a GUI window, which informs the user in case of an error during execution. Such an
    error may result due to unfeasible combinations of flow and/or geometry characteristics, which need to be altered
    before execution restarts.
    """

    def __init__(self, parent, controller):
        self.controller = controller

        tk.Frame.__init__(self, parent, bg='white')

        frame_1 = tk.Frame(self, bg='white')
        frame_2 = tk.Frame(self, bg='white')

        label = tk.Label(frame_1,
                         text="Execution failed successfully! Plsease check Geometry and Flow characteristics!",
                         font=LARGE_FONT, wraplength=200, bg='white')
        label.pack(pady=60)

        self.restart_btn = tk.PhotoImage(file='restart.png')
        submit = tk.Button(frame_2, image=self.restart_btn, command=self.restart_program,
                           borderwidth=0, bg='white', activebackground="white")
        submit.pack(pady=25)

        frame_1.pack()
        frame_2.pack()

    def restart_program(self):
        python = executable
        execl(python, python, *argv)


