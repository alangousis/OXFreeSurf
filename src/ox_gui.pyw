class River_Drawing(tk.Frame):
    """
    River_Drawing class allows the user to define the number of nodes of the polyline that best describes the altimetry
    of the channel’s reaches, as well as their coordinates. Then, it passes all user inputs to ox_solver.py, which
    returns the free surface elevation along the channel at locations spaced by dx (i.e. the discretization step used
    for the numerical integration). After successful execution of ox_solver.py, a new window appears that includes a
    plot of the channel’s longitudinal section, together with the corresponding elevations of the free surface, where
    the user can zoom in and out to focuson specific locations of interest. The user can also choose to export the plot
    in .jpg (picture) and/or .xlsx (table) formats and, optionally, start a new simulation.
    """

    def __init__(self, parent, controller):

        self.controller = controller

        tk.Frame.__init__(self, parent, bg='white')
        self.frame_1 = tk.Frame(self, bg='white')
        self.frame_2 = tk.Frame(self, bg='white')
        self.frame_3 = tk.Frame(self, bg='white')
        self.frame_4 = tk.Frame(self, bg='white')

        self.label = tk.Label(self.frame_1, text="Number of nodes", bg='white', font=('Standard', 16, 'bold'),
                              fg='#0084cb')  # Number of nodes
        self.label.pack(padx=5)

        self.nodes = tk.Entry(self.frame_2, bg='white smoke')
        self.nodes.pack(side=tk.RIGHT, expand=tk.YES, fill=tk.X)

        self.continue_btn = tk.PhotoImage(file='continue.png')
        submit = tk.Button(self.frame_4, image=self.continue_btn, command=self.river_drawing, borderwidth=0, bg='white',
                           activebackground="white")
        submit.pack(pady=5)

        self.frame_1.pack()
        self.frame_2.pack()
        self.frame_3.pack(pady=110)
        self.frame_4.pack()

    def river_drawing(self):

        self.num_nodes = int(self.nodes.get())

        self.label.config(text="Node Coordinates")
        self.frame_2.destroy()
        self.frame_3.destroy()
        self.frame_4.destroy()

        self.frame_2_new = tk.Frame(self, bg='white')

        self.label_1 = tk.Label(self.frame_2_new, text="X [m]:", bg='white')  # Nodes' X coordinate
        self.label_1.pack(side=tk.LEFT,
                          padx=90, pady=5)

        self.label_2 = tk.Label(self.frame_2_new, text="Y [m]:", bg='white')  # Nodes' Y coordinate
        self.label_2.pack(side=tk.RIGHT,
                          padx=10, pady=5)

        self.frame_2_new.pack()
        self.frame_3_new = tk.Frame(self, bg='white')
        self.frame_3_new.pack()
        self.nodes_canvas = tk.Canvas(self.frame_3_new, highlightthickness=0, bg='white')
        self.nodes_canvas.pack(side=tk.LEFT, fill=tk.BOTH, expand=1)
        self.nodes_scrollbar = ttk.Scrollbar(self.frame_3_new, orient=tk.VERTICAL, command=self.nodes_canvas.yview)
        self.nodes_scrollbar.pack(side=tk.RIGHT, fill=tk.Y)
        self.nodes_canvas.config(yscrollcommand=self.nodes_scrollbar.set)
        self.nodes_canvas.bind('<Configure>',
                               lambda e: self.nodes_canvas.configure(scrollregion=self.nodes_canvas.bbox("all")))

        def on_mouse_wheel(event):
            self.nodes_canvas.yview_scroll(-1 * int((event.delta / 120)), "units")

        self.nodes_canvas.bind_all("<MouseWheel>", on_mouse_wheel)
        self.frame_4_new = tk.Frame(self.nodes_canvas, bg='white')
        self.nodes_canvas.create_window((0, 0), window=self.frame_4_new, anchor="nw")
        self.entries = self.makeform(self.frame_4_new)
        self.frame_5_new = tk.Frame(self, bg='white')

        self.solve_btn = tk.PhotoImage(file='solve.png')
        submit = tk.Button(self.frame_5_new, image=self.solve_btn, command=(lambda e=self.entries: self.sketcher()),
                           borderwidth=0, bg='white', activebackground="white")
        submit.pack(pady=25)

        self.frame_5_new.pack()

    def makeform(self, frame):

        entries = []

        for i in range(self.num_nodes):
            tk.Label(frame, bg='white', width=8, text="Node " + f"{i + 1}:",
                     anchor='w').grid(row=i + 1, column=0, pady=10, padx=12)
            frame.pack()
            ent_nod_X = tk.Entry(frame, bg='white smoke')
            ent_nod_X.grid(row=i + 1, column=1, pady=10, padx=12)
            ent_nod_Y = tk.Entry(frame, bg='white smoke')
            ent_nod_Y.grid(row=i + 1, column=2, pady=10, padx=12)
            entries += [ent_nod_X, ent_nod_Y]

        return [entries]

    def sketcher(self):

        self.label.destroy()
        self.label.destroy()
        self.label_1.destroy()
        self.label_2.destroy()

        self.frame_4 = tk.Frame(self, bg='white')

        self.restart_btn = tk.PhotoImage(file='restart.png')
        submit = tk.Button(self.frame_4, image=self.restart_btn, command=self.restart_program,
                           borderwidth=0, bg='white', activebackground="white")
        submit.pack(side=tk.LEFT, pady=25, padx=10)

        x = []
        y = []
        for i in range(0, len(self.entries[0]), 2):
            x += [float(self.entries[0][i].get())]
            y += [float(self.entries[0][i + 1].get())]

        self.frame_1.destroy()
        self.frame_2_new.destroy()
        self.frame_3_new.destroy()
        self.frame_4_new.destroy()
        self.frame_5_new.destroy()

        Q = float(self.controller.shared_data.get("Q").get())
        b = float(self.controller.shared_data.get("b").get())
        z = float(self.controller.shared_data.get("z").get())
        n0 = float(self.controller.shared_data.get("n0").get())
        dx = float(self.controller.shared_data.get("dx").get())
        ystart = float(self.controller.shared_data.get("ystart").get())
